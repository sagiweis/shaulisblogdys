@{
    ViewBag.Title = "AddPost";
}

<script>
    function toggleImageUpload() {
        if ($("#uploadedImageId").prop("disabled"))
            $("#uploadedImageId").prop("disabled", false);
        else
            $("#uploadedImageId").prop("disabled", true);
    }
</script>
<div style="border:1px solid darkgray; border-radius:10px;padding:10px">
    <h3>New Post</h3>
    <form method="POST" action="/Manager/Create" style="padding:0px;margin:0px;" enctype="multipart/form-data">
        Title: <input class="form-control" type="text" id="title" name="title" /><br />
        Author: <input class="form-control" type="text" id="author" name="author" /><br />
        Author Website: <input class="form-control" type="text" id="siteurl" name="siteurl" /><br />
        Content: <textarea id="content" name="content"></textarea><br />
        Image: <input type="checkbox" onchange="toggleImageUpload()" />
        <input type="file" id="uploadedImageId" name="uploadedImage" accept="image/*" disabled><br />
        Video: <input type="text" id="uploadedVideoId" name="uploadedVideo"><br />
        <button class="btn btn-success" type="submit">Submit</button>
    </form>
</div>